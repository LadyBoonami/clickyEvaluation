{
  "private": true,
  "engines": {
    "node": "*",
    "npm": "*"
  },
  "dependencies": {
    "purescript": "0.10.1",
    "pulp": "9.0.1",
    "bower": "*"
  },
  "scripts": {
    "postinstall": "pulp --version && bower --version && bower update",
    "build": "psc \"bower_components/*/src/**/*.purs\" src/AST.purs src/IndentParser.purs src/Parser.purs test/Parser.purs test/Main.purs",
    "test": "psc-bundle \"output/**/*.js\" -o Main.js --main Test.Main && node Main.js",
    "watch": "pulp -w test"
  }
}
