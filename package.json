{
  "private": true,
  "engines": {
    "node": "*",
    "npm": "*"
  },
  "dependencies": {
    "bower": "*",
    "pulp": "9.0.1",
    "purescript": "0.10.1"
  },
  "scripts": {
    "postinstall": "pulp --version && bower --version && bower update",
    "build_components": "psc \"bower_components/*/src/**/*.purs\"",
